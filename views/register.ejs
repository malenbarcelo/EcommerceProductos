<%- include('./partials/head') %>
<%- include('./partials/header') %>

<!-- Formulario de registro-->
<h3 class="form-title">Crea tu cuenta</h3>

<form action="/" method="POST" id="form-register" name="form-register">
    <div>
        <input type="text" name="name" id="name" placeholder="Razón Social">
    </div>

    <div>
        <input type="text" name="cuit" id="cuit" placeholder="CUIT">
    </div>

    <div>
        <input type="text" name="address" id="address" placeholder="Domicilio">
    </div>

    <div>
        <input type="text" name="city" id="city" placeholder="Localidad">
    </div>

    <div>
        <input type="text" name="user" id="user" placeholder="Nombre de usuario">
    </div>

    <div>
        <input type="password" name="password" id="password" placeholder="Contraseña">
    </div>

    <div>
        <input type="password" name="password-valid" id="password-valid" placeholder="Confirmar contraseña">
    </div>

    <div id="buttons">
        <button type="reset">Borrar</button>
        <button type="submit">Enviar</button>
    </div>

</form>

