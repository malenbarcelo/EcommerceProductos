<%- include('./partials/header') %>

<!-- Formulario de registro-->
<h3 class="form-title">Datos del producto a crear</h3>

<form action="/" method="POST" id="form-create" name="form-create">
    <div>
        <input type="text" name="product-name" id="product-name" placeholder="Nombre del producto">
    </div>

    <div>
        <input type="text" name="product-description" id="product-description" placeholder="Descripción">
    </div>

    <div>
        <input type="text" name="product-image" id="product-image" placeholder="Imagen">
    </div>

    <div>
        <input type="text" name="product-category" id="product-category" placeholder="Categoría">
    </div>



    <div id="buttons">
        <button type="reset">Borrar</button>
        <button type="submit">Enviar</button>
    </div>

</form>

