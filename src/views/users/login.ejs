<%- include('../partials/head') %>
<%- include('../partials/header') %>

<body class="body-user-login">
    

<h3 class="login-form-title">Ingresar</h3>

<div class="div-errors">
    <ul>
    </ul>
</div>

<form action="/users/login" method="POST" name="form-register" class="form-login"> 
    <div class="login-form-div email-div">
        <input type="text" name="email" placeholder="Email" class="login-form-input email <%= locals.errors && errors.email ? 'is-invalid' : null %>" value="<%= locals.oldData ? oldData.email : null %>">
        <% if (locals.errors && errors.email) { %>
            <i class="fas fa-exclamation"></i>
            <div class="form-error email-error">
                <%= errors.email.msg %> 
            </div>
        <% } %>
    </div>

    <div class="login-form-div password-div">
        <input type="password" name="password" placeholder="ContraseÃ±a" class="login-form-input password <%= locals.errors && errors.password ? 'is-invalid' : null %>">
        <% if (locals.errors && errors.password) { %>
            <i class="fas fa-exclamation"></i>
            <div class="form-error password-error">
                <%= errors.password.msg %> 
            </div>
        <% } %>
    </div>

    <div class="login-form-div div-remember-user">
        <input type="checkbox" name="remember_user"> Recordar usuario
    </div>

    <div class="login-form-div login-text">
      <p><a href="/users/register">Registrarme</a></p>      
    </div>

    <div class="login-form-buttons">
        <button type="submit" class="login-form-button">Ingresar</button>
    </div>

</form>

<script src="/js/userLogin.js"></script>
</body>
